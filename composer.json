{
    "name": "midorikocak/nanodb",
    "type": "library",
    "description": "Nano DB is a tiny php library that allows you to define easily usable repositories.",
    "keywords": [
        "midorikocak",
        "nanodb",
        "database",
        "datasource"
    ],
    "homepage": "https://github.com/midorikocak/nanodb",
    "license": "MIT",
    "authors": [
        {
            "name": "Midori Kocak",
            "email": "mtkocak@gmail.com",
            "homepage": "https://mtkocak.net",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.4",
        "ext-json": "*",
        "ext-pdo": "*",
        "midorikocak/arraytools": "dev-master",
        "midorikocak/querymaker": "^1.4.1"
    },
    "require-dev": {
        "opsway/psr12-strict-coding-standard": "^0.3.0",
        "phpunit/phpunit": ">=8.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "midorikocak\\nanodb\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "midorikocak\\nanodb\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -vs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
